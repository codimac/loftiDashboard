{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@services/*": ["shared/services/*"],
      "@env/*": ["environments/*"],
      "@styles/*": ["styles/*"],
      "images/*": ["public/images/*"]
    },
    "lib": [
      "dom", "es2015", "es2017"
    ]
  },
  "exclude": [
    "node_modules", "dist"
  ],
}
